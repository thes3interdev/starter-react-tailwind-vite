{
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:react/recommended",
		"plugin:jsx-a11y/recommended"
	],
	"plugins": ["react", "import", "jsx-a11y"],
	"rules": {
		"rules": {
			"no-unused-vars": [
				"error",
				{ "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
			]
		},
		"react/prop-types": 0,
		"indent": ["error", "tab"],
		"linebreak-style": 1,
		"quotes": ["error", "single"]
	},
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"settings": {
		"react": {
			"version": "detect"
		},
		"import/resolver": {
			"node": {
				"extensions": [".js", ".jsx", ".ts", ".tsx"]
			}
		}
	}
}
